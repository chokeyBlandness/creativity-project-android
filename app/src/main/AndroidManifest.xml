<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="usst.dysrc.kaoyan">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ApplicationData"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register" />
        <activity
            android:name=".ChangeUserInfoActivity"
            android:label="@string/button_change_user_info"/>
        <activity android:name=".PostDetailActivity"
            android:label="@string/title_activity_postDetail"/>
        <activity android:name=".CreateNewPost"
            android:label="@string/title_activity_create_new_post"/>
        <activity android:name=".ClockInActivity"
            android:label="@string/title_activity_clock_in"/>
        <activity android:name=".MineCollectionListActivity"
            android:label="@string/title_activity_mine_collectionList"/>

    </application>

</manifest>